{
  "$schema": "https://schema.railpack.com",
  "packages": {
    "node": "20"
  },
  "steps": {
    "dashboard-install": {
      "commands": [
        "cd dashboard && npm ci"
      ]
    },
    "dashboard-build": {
      "inputs": [{ "step": "dashboard-install" }],
      "commands": [
        "cd dashboard && npm run build"
      ]
    },
    "copy-dashboard": {
      "inputs": [{ "step": "dashboard-build" }],
      "commands": [
        "mkdir -p bin && cp -r dashboard/dist bin/dashboard"
      ]
    }
  },
  "deploy": {
    "inputs": [{ "step": "copy-dashboard" }],
    "startCommand": "./bin/super_accounts",
    "variables": {
      "DASHBOARD_PATH": "./bin/dashboard"
    }
  }
}
